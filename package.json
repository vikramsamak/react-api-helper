    "http-client",
    "data-fetching",
    "async-storage",
    "state-management"
  ],
  "license": "MIT",
  "homepage": "https://github.com/vikramsamak/react-api-utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikramsamak/react-api-utils.git"
  },
  "bugs": {
    "url": "https://github.com/vikramsamak/react-api-utils/issues"
  },
  "main": "dist/react-api-utils-umd.js",
  "module": "dist/react-api-utils-es.js",
  "types": "dist/react-api-utils-es.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
